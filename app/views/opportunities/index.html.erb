<p id="notice"><%= notice %></p>

<h1>Listing Opportunities</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Project name</th>
      <th>Contact name</th>
      <th>Contact phone</th>
      <th>Contact fax</th>
      <th>Contact email</th>
      <th>Bid date</th>
      <th>Trades solicited</th>
      <th>Instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.client %></td>
        <td><%= opportunity.project_name %></td>
        <td><%= opportunity.contact_name %></td>
        <td><%= opportunity.contact_phone %></td>
        <td><%= opportunity.contact_fax %></td>
        <td><%= opportunity.contact_email %></td>
        <td><%= opportunity.bid_date %></td>
        <td><%= opportunity.trades_solicited %></td>
        <td><%= opportunity.instructions %></td>
        <td><%= link_to 'Show', opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

